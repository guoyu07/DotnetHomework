@{
    ViewData["Title"] = "加入社团";
}

<link rel="stylesheet" href="~/css/header-lined.css"/>
<link rel="stylesheet" href="~/css/link-list.css"/>

<h2>@ViewData["Title"]</h2>

<div class="row">

  <div class="col-md-3">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <i class="icon icon-wrench"></i>操作
        </h3>
      </div>
      <div class="list-group">
        <a asp-controller="Society" asp-action="Index" class="list-group-item">
          查找社团
        </a>
        <a asp-controller="Society" asp-action="Create" class="list-group-item">
          创建新的社团
        </a>
      </div>
    </div>

  </div>


  <div class="col-md-9 main-content">

    <div class="header-lined">
      <h1>加入社团</h1>
      <ol class="breadcrumb">
        <li>
          <a asp-controller="Home" asp-action="Index">
            首页
          </a>
        </li>
        <li>
          <a asp-controller="Society" asp-action="Index">
            社团
          </a>
        </li>
        <li class="active">加入社团</li>
      </ol>
    </div>

    <h1>@ViewData["Message"]</h1>
    @if ((bool) ViewData["Result"] == false)
    {
        <h3>@ViewData["Reason"]</h3>
    }
    <h4 class="link-list">
      <a asp-controller="Society" asp-action="Info" asp-route-id=@ViewData["SocietyId"]>返回社团详情</a>
      <a asp-controller="Society" asp-action="Index">查看更多社团</a>
    </h4>

  </div>

</div>